<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".fragments.ExerciseChooserFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exercise_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_margin"
            android:text="@string/description"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/textColor"
            />


        <TextView
            android:id="@+id/choose_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/choose_exercise"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/textColor"
            />

        <Button
            android:id="@+id/upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/title_margin"
            android:background="@drawable/button_rounded"
            android:padding="@dimen/title_margin"
            android:text="@string/upper_back"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/lower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/title_margin"
            android:background="@drawable/button_rounded"
            android:padding="@dimen/title_margin"
            android:text="@string/lower_back"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/title_margin"
            android:background="@drawable/button_rounded"
            android:padding="@dimen/title_margin"
            android:text="@string/both_back"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>



    </LinearLayout>


</FrameLayout>
